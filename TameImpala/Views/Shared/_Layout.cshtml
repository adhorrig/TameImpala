<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tame Impala", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li> <!-- link name, action result, controller name-->
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Upcoming", "Index", "UpcomingGigs")</li>
                    <li>@Html.ActionLink("Previous", "Index", "PreviousGigs")</li>
                    <li>@Html.ActionLink("Article", "Index", "Articles")</li>
                    <li>@Html.ActionLink("Music", "Index", "Videos")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        </br>
        </br>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tame Impala fansite developed by Adam Horrigan.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
    $(function() {
        $('#btnGetGigs').click(function() {
            $.ajax({
            type: 'POST',
            url: 'TameImpalaService.asmx/GetAllGigs',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function(response) {
                $('#lblData').html(JSON.stringify(response));
            },
            error: function(error) {
                console.log(error);
            }
         });
        });
    });
    </script>
</body>
</html>
