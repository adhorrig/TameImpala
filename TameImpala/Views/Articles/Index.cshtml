@using PagedList.Mvc;
@model PagedList.IPagedList<TameImpala.Models.Article>

@{
    ViewBag.Title = "Here is the latest Tame Impala news!";
}

<h2>Tame Impala News</h2>
<p>Features of this page include using the Bitly API. This shortens URLs so that they are not long. An example of both are below to see the difference.</p>

<p>
    @Html.ActionLink("Submit a new link", "Create")
</p>
<table class="table">
    <tr>
        <th>
            URL
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.URL)">@Html.DisplayFor(modelItem => item.URL)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArticleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArticleID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArticleID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, pageSize = Model.PageSize }))